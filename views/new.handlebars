<div class="expense-container mt-4">
  <h1 class="pb-4">請輸入支出</h1>
  {{!-- expense form --}}
  <div class="form-container">
    <form id="form" action="/expenses" method="POST" novalidate>
      <div class="form-item">
        <i class="fa-solid fa-cart-shopping"></i>
        <input id="name" type="text" name="name" placeholder="請輸入名稱" required>
        <div class="valid-feedback">
          輸入完成
        </div>
        <div class="invalid-feedback">
          請輸入餐廳電話!
        </div>
      </div>
      <div class="form-item">
        <i class="fa-solid fa-calendar-days"></i>
        <input id="date" type="date" name="date" required>
        <div class="valid-feedback">
          輸入完成
        </div>
        <div class="invalid-feedback">
          請輸入餐廳電話!
        </div>
      </div>
      <div class="form-item">
        <i class="fa-solid fa-dollar-sign"></i>
        <input id="amount" type="number" name="amount" placeholder="請輸入金額" required>
        <div class="valid-feedback">
          輸入完成
        </div>
        <div class="invalid-feedback">
          請輸入餐廳電話!
        </div>
      </div>
      <div class="form-item">
        <select id="category" name="category" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" required>
          <option selected>類別</option>
          <option value="家居物業" {{#if life}} selected {{/if}}>家居物業</option>
          <option value="交通出行" {{#if traffic}} selected {{/if}}>交通出行</option>
          <option value="休閒娛樂" {{#if recreation}} selected {{/if}}>休閒娛樂</option>
          <option value="餐飲食品" {{#if food}} selected {{/if}}>餐飲食品</option>
          <option value="其他" {{#if other}} selected {{/if}}>其他</option>
        </select>
        <div class="valid-feedback">
          輸入完成
        </div>
        <div class="invalid-feedback">
          請輸入餐廳電話!
        </div>
      </div>
      <div class="form-item text-center">
        <button id="submit-button" class="btn btn-primary" type="submit">新增</button>
      </div>
    </form>
  </div>
</div>